enum Permission {
  ADMIN
  DRIVER
  AGENT
}

enum CollectionType {
  SOURCE
}

type User {
  id: ID! @unique
  cc: Int! @unique
  email: String! @unique
  nickname: String! @unique
  password: String!
  name: String
  resetToken: String
  resetTokenExpiry: Float
  inspections: [Inspection!]!
  permissions: [Permission]
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Inspection {
  id: ID! @unique
  source: Collection!
  record: String!
  licensePlate: String!
  user: User!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Collection {
  id: ID! @unique
  type: CollectionType!
  name: String! @unique
  user: User!
  createdAt: DateTime!
  updatedAt: DateTime!
}
