enum Permission {
  ADMIN
  DRIVER
  AGENT
}

enum CollectionType {
  SOURCE
}

type User {
  id: ID! @id
  cc: Int! @unique
  email: String! @unique
  nickname: String! @unique
  password: String!
  name: String
  resetToken: String
  resetTokenExpiry: Float
  inspections: [Inspection!]! @relation(link: INLINE)
  permissions: [Permission]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Inspection {
  id: ID! @id
  source: Collection! @relation(link: INLINE)
  record: String!
  licensePlate: String!
  user: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Collection {
  id: ID! @id
  type: CollectionType!
  name: String! @unique
  user: User! @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
